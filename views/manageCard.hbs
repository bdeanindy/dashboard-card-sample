<div class="container">
    <div class="row" id="appData">
        <section>
            <h1>Manage Card</h1>
            <p>Learn about <a href="https://dev.weebly.com/what-are-dashboard-cards.html" title="How to Create Weebly Dashboard Card App Documentation">Dashboard Card Apps</a>.
            <section>
            {{#if card}}
                {{!-- Handle configured dashboard card --}}
                <label for="cardId">Card ID: <input id="cardId" disabled type="text" value="{{card.card_id}}" /></label>
                <label for="userId">User ID: <input id="userId" disabled type="text" value="{{card.user_id}}" /></label>
                <label for="siteId">Site ID: <input id="siteId" disabled type="text" value="{{card.site_id}}" /></label>
                <hr />
                <div style="border: 1px solid #ccc; padding: 3%;">
                    <h2>Raw Card Data</h2>
                    <textarea name="rawCardData" rows="10" cols="50" disabled>{{card.card_data}}</textarea>
                </div>
            {{else}}
                {{!-- Handle unconfigured dashboard card --}}
                <strong>App has been installed, but not configured!</strong>
                <button id="configureCard">Configure Card Now</button>
            {{/if}}
            </section>
        </section>
    </div>
    <div class="row align-items-center hidden" id="loading">
        <div class="col-md-6 offset-md-3"> 
            <img src="/images/loading.gif" border="0" />
        </div>
    </div>
</div>
